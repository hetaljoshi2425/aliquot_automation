{
  "name": "playwright-typescript-framework",
  "version": "1.0.0",
  "description": "Playwright TypeScript testing framework with Page Object Model and Allure reporting",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:qa": "npx playwright test",
    "test:qa:headed": "npx playwright test --project=chromium-headed",
    "test:qa:headless": "npx playwright test --project=chromium-headless",
    "test:qa:both": "npx playwright test",
    "test:report": "allure serve allure-results",
    "test:generate-report": "allure generate allure-results --clean -o allure-report",
    "test:open-report": "allure open allure-report",
    "netlify:build": "chmod +x scripts/netlify-build.sh && ./scripts/netlify-build.sh",
    "netlify:deploy": "chmod +x scripts/deploy-to-netlify.sh && ./scripts/deploy-to-netlify.sh",
    "install:browsers": "playwright install",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "keywords": [
    "playwright",
    "typescript",
    "testing",
    "automation",
    "allure"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "allure-playwright": "^2.10.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "dotenv": "^17.2.2"
  }
}
